@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_ContLayout.cshtml";
}

@section left_menu {
    <div class="col-lg-4" data-aos="fade-up" data-aos-delay="100">
        <div class="service-box">
            <h4>Chỉ số BMI</h4>
            <div class="services-list">
                <a href="~/Bmis/BmiCheck" class="active"><i class="bi bi-arrow-right-circle"></i><span>Đo chỉ số BMI</span></a>
                <a href="~/Bmis/Index"><i class="bi bi-arrow-right-circle"></i><span>Bảng chỉ số BMI</span></a>
                <a href="#congthuc"><i class="bi bi-arrow-right-circle"></i><span>Công thức tính chỉ số BMI</span></a>
                <a href="#phanloai"><i class="bi bi-arrow-right-circle"></i><span>Phân loại mức độ gầy béo</span></a>
                <a href="#vongeo"><i class="bi bi-arrow-right-circle"></i><span>Tỉ lệ vòng eo/mông</span></a>

            </div>
        </div><!-- End Services List -->

        <div class="service-box">
            <h4>Tài liệu tham khảo</h4>
            <div class="download-catalog">
                <a href="#"><i class="bi bi-filetype-pdf"></i><span>Định dạng PDF</span></a>
                <a href="#"><i class="bi bi-file-earmark-word"></i><span>Định dạng DOC</span></a>
            </div>
        </div><!-- End Services List -->

        <div class="help-box d-flex flex-column justify-content-center align-items-center">
            <i class="bi bi-headset help-icon"></i>
            <h4>Câu hỏi trực tiếp?</h4>
            <p class="d-flex align-items-center mt-2 mb-0"><i class="bi bi-telephone me-2"></i> <span>+084 905 223 344</span></p>
            <p class="d-flex align-items-center mt-1 mb-0"><i class="bi bi-envelope me-2"></i> <a href="mailto:info@nutriguide.com">info@nutriguide.com</a></p>
        </div>
    </div>
}
@section heading {
    <h3>Chỉ số BMI theo hướng dẫn của Viện Dinh dưỡng Quốc gia</h3>
}

@section page {
    <span>BMI</span>
}

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="BmiCheck" asp-controller="Bmis">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label name="lblHeight" class="control-label">Chiều cao (cm)</label>
                <input name="Height" type="text" required class="form-control" />
            </div>
            <div class="form-group">
                <label name="lblWeight" class="control-label">Cân nặng (kg)</label>
                <input name="Weight" type="text" required class="form-control" />
            </div>
            
            <p></p>
            <div class="form-group">
                <input type="submit" value="Kiểm tra" class="btn btn-primary" />
            </div>

            <hr/>
            @{
                if (ViewBag.Message != null)
                {
                    <div class="form-group">
                        <label class="control-label">Chỉ số BMI: @ViewBag.BmiIndex</label>
                    <div name="BMIIndex" class="form-control">Kết luận: @ViewBag.Message</div>
                    </div>
                }
            }
            <p></p>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
