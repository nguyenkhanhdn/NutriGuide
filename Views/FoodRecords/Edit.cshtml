@model NutriGuide.Models.FoodRecord

@{
    ViewData["Title"] = "Edit"; Layout = "_ContLayout";
}

<h1>Quản lý thực phẩm</h1>


<hr />
<h4>Thay đổi thông tin</h4>
<div class="row">
    <div class="col-md-10">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FoodName" class="control-label"></label>
                <input asp-for="FoodName" class="form-control" />
                <span asp-validation-for="FoodName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GlycemicIndex" class="control-label"></label>
                <input asp-for="GlycemicIndex" class="form-control" />
                <span asp-validation-for="GlycemicIndex" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateConsumed" class="control-label"></label>
                <input asp-for="DateConsumed" class="form-control" />
                <span asp-validation-for="DateConsumed" class="text-danger"></span>
            </div>
            <p></p>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<p></p>
